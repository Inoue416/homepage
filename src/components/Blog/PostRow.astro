---
import { formatDate } from "../../lib/helpers";

interface Props {
	title: string;
	date: Date;
	url: string;
}

const { title, date, url } = Astro.props;
---

<li class="w-full text-light-primary dark:text-dark-primary ease-in-out transition-colors border-b-light-primary dark:border-b-dark-primary border-dashed border-b-1 my-2">
  <a
    class="text-sm md:text-base flex justify-between"
    href={`/blog/${url}`}
  >
    <p class="inline-block whitespace-nowrap">
      {title}
    </p>
    <time
      class="tabular-nums"
      datetime={date.toISOString()}
      data-date={date.toISOString()}
    >
      {formatDate(date)}
    </time>
  </a>
</li>
