{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"include": ["*.ts", "*.astro", "*.svelte", "*.js", "*.tsx"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": ["*.ts", "*.astro", "*.svelte", "*.js", "*.tsx"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"globals": ["Astro"]
	}
}
